        <input type="text" name = "content" value=""/>            
        <input type="submit"  value="Adicionar &rarr;"/>

    </form> 
    
    <form action="posts" method="get" accept-charset="utf-8">  
        <label for="busca">Busca</label>
        <input type="text" name = "busca" value=""/>
        <input type="submit"  value="busca....">

    </form>     


    </div>
       



    <ul>
        {{#posts}}
         <li>{{content}}</li>
        {{/posts}}
    </ul>  

    </div>



    
</body>

</html>
